<Window x:Class="Application1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application 1" Width="800" Height="600">
    <Grid>
        <!-- Text Header -->
        <TextBlock Text="Application 1" Margin="30,10,0,0" FontSize="18" VerticalAlignment="Top" />

        <!-- Input TextBox -->
        <TextBox x:Name="InputTextBox" Margin="30,50,300,0" FontSize="16" Height="30" VerticalAlignment="Top" />

        <!-- Send Button -->
        <Button x:Name="SendButton" Content="Send" Margin="490,50,200,0" Height="30" VerticalAlignment="Top" Click="SendButton_Click" />

        <!-- Output TextBlock -->
        <TextBlock x:Name="Output" Margin="30,90,300,0" FontSize="16" VerticalAlignment="Top" />
    </Grid>
</Window>